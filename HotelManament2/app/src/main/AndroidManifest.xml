<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotelmanament2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotelManament2"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activity.EditServicesActivity" />
        <activity android:name=".ui.activity.ShowListServicesActivity" />
        <activity android:name=".ui.activity.CustomerUsingServicesActivity" />
        <activity android:name=".ui.activity.EditCustomerActivity" />
        <activity android:name=".ui.activity.AddServiceActivity" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".ui.activity.CustomerActivity" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/Theme.Design" />
        <activity android:name=".ui.activity.EditRoomActivity" />
        <activity android:name=".ui.activity.PayActivity" />
        <activity android:name=".ui.activity.AddHotelRoomActivity" />
        <activity android:name=".ui.activity.AddCustomerActivity" />
        <activity android:name=".ui.activity.GeneralInformationActivity" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/Theme.Design">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>